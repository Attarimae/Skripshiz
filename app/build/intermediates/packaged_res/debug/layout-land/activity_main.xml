<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="83dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/MA_txtViewProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:backgroundTint="#23395d"
                android:text="Profile Picture"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/MA_txtViewMainPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#23395d"
                android:text="Home"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MA_txtViewProfilePicture" />

            <Button
                android:id="@+id/MA_txtViewActiveOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#23395d"
                android:text="Orders"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MA_txtViewMainPage" />

            <Button
                android:id="@+id/MA_txtViewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#23395d"
                android:text="History"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MA_txtViewActiveOrder" />

            <Button
                android:id="@+id/MA_txtViewReportOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#23395d"
                android:text="Report Order"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MA_txtViewHistory" />

            <Button
                android:id="@+id/MA_txtViewSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#23395d"
                android:text="Settings"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MA_txtViewReportOrder" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/MA_gambarRestoran"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toStartOf="@+id/MA_txtViewWelcome"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/toolbarLayout"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/MA_txtViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Mr. Pines\nCashier RestoKiddo"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/MA_buttonLogout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/MA_gambarRestoran"
        app:layout_constraintTop_toTopOf="@id/MA_gambarRestoran"
        app:layout_constraintBottom_toBottomOf="@id/MA_gambarRestoran"/>

    <Button
        android:id="@+id/MA_buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/MA_txtViewWelcome"
        app:layout_constraintTop_toTopOf="@id/MA_gambarRestoran"
        app:layout_constraintBottom_toBottomOf="@id/MA_gambarRestoran"/>

    <FrameLayout
        android:id="@+id/MA_fragmentsMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="220dp"
        android:layout_marginTop="110dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/MA_gambarRestoran"
        app:layout_constraintStart_toEndOf="@id/toolbarLayout"/>

    <FrameLayout
        android:id="@+id/MA_fragmentsCheckout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="525dp"
        android:layout_marginTop="110dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/MA_gambarRestoran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/MA_fragmentsMenu"/>

</androidx.constraintlayout.widget.ConstraintLayout>