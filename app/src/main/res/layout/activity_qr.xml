<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_activity_detail" />

    <Button
        android:id="@+id/generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_qr"
        android:layout_centerHorizontal="true"
        android:text="Generate QR Code"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/table_qr"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:hint="Insert Table Number"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number" />

    <ImageView
        android:id="@+id/qr_code_image_view"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@id/table_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/save_qr_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_code_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Save QR"
        android:textColor="@color/white"/>
</RelativeLayout>
