<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/menu_CheckoutCartImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_shopping_cart_light_24"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:paddingEnd="10dp"/>

    <ImageView
        android:id="@+id/menu_CheckoutCartNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_checkout_circle_24"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/menu_CheckoutCartImage"
        app:layout_constraintStart_toStartOf="@id/menu_CheckoutCartImage"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/menu_CheckoutCartCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="0"
        app:layout_constraintTop_toTopOf="@id/menu_CheckoutCartNotif"
        app:layout_constraintEnd_toEndOf="@id/menu_CheckoutCartNotif"
        app:layout_constraintBottom_toBottomOf="@id/menu_CheckoutCartNotif"
        app:layout_constraintStart_toStartOf="@id/menu_CheckoutCartNotif"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>