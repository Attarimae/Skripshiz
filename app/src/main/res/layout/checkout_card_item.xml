<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/checkout_Image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkout_Image"
            android:id="@+id/checkout_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="Ayam Gaybox Paket Mantap"
            android:textAlignment="center" />

        <Button
            app:layout_constraintTop_toBottomOf="@id/checkout_Name"
            app:layout_constraintStart_toEndOf="@id/checkout_Image"
            android:id="@+id/checkout_SubQuantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:text="-"
            android:textAlignment="center" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/checkout_Name"
            app:layout_constraintStart_toEndOf="@id/checkout_SubQuantity"
            android:id="@+id/checkout_AmountQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="69"
            android:textAlignment="center" />

        <Button
            app:layout_constraintTop_toBottomOf="@id/checkout_Name"
            app:layout_constraintStart_toEndOf="@id/checkout_AmountQuantity"
            android:id="@+id/checkout_AddQuantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:text="+"
            android:textAlignment="center" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/checkout_Name"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/checkout_TotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingEnd="4dp"
            android:text="Rp. 69.000"
            android:textAlignment="center" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>