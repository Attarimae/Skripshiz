<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Fragment.SalesReportFragment"
    android:orientation="vertical"
    android:background="?attr/colorOnPrimary">

    <TextView
        android:id="@+id/FR_salesReportTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALES REPORT"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/FR_salesReport_DateOneText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Date:\n17-08-2024"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/FR_salesReport_DateTwoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Date:\n17-08-2024"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/FR_salesReport_CheckSalesBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Check Sales"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/FR_salesReport_TextViewTotalSales"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Total Sales:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="10dp"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/FR_salesReport_AmountTotalSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/FR_salesReport_TextViewSalesByEmployees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sales by Orders"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FR_salesReport_recyclerviewSalesEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

