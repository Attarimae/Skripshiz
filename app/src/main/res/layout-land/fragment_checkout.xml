<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Fragment.CheckoutFragment">

    <TextView
        android:id="@+id/FR_txtViewCheckout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:padding="10dp"
        android:textSize="24sp"/>

    <GridView
        android:id="@+id/FR_gridCheckout"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/FR_txtViewCheckout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"/>

    <TextView
        android:id="@+id/FR_txtViewTotalPriceLeft"
        app:layout_constraintBottom_toTopOf="@id/FR_buttonCheckout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:padding="10dp"
        android:layout_marginStart="24dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/FR_txtViewTotalPriceRight"
        app:layout_constraintBottom_toTopOf="@id/FR_buttonCheckout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 69.000"
        android:padding="10dp"
        android:layout_marginEnd="24dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/FR_buttonCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Checkout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>